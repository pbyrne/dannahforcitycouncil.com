{
  "name": "dannahforcitycouncil.com",
  "description": "Source code powering Dannah Thompson's campaign website",
  "homepage": "https://dannahforcitycouncil.com",
  "license": "See LICENSE file",
  "repository": {
    "type": "git",
    "url": "https://github.com/pbyrne/dannahforcitycouncil.com"
  },
  "engines": {
    "node": "~16.13.0",
    "npm": "~8.1.2"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "autoprefixer": "^10.4.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "postcss-purgecss": "^5.0.0",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:eleventy": "npx @11ty/eleventy",
    "build:postcss": "npx postcss source/stylesheets --config config/postcss.config.js --dir _site/stylesheets/",
    "clean": "rm -rf _site",
    "serve": "npm-run-all clean --parallel serve:*",
    "serve:eleventy": "npx @11ty/eleventy --serve",
    "serve:postcss": "npx postcss source/stylesheets --config config/postcss.config.js --dir _site/stylesheets/ --watch"
  }
}
